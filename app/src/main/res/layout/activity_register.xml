<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/_rl_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/title_bg">

        <ImageView
            android:id="@+id/_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dip"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dip"
            android:src="@mipmap/ic_arrow_left_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/register_tv_title_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机注册"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="@color/title_bg"
                android:background="@mipmap/register_left_tap"/>

            <TextView
                android:id="@+id/register_tv_title_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱注册"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background="@mipmap/register_right_no_tap"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_et_acount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的手机号"
            android:textSize="25sp"
            android:singleLine="true"
            android:inputType="phone"
            android:layout_marginTop="20dp"
            android:background="@drawable/register_input_phone"/>

        <EditText
            android:id="@+id/register_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的姓名"
            android:textSize="25sp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/register_input_name"/>

        <EditText
            android:id="@+id/register_et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textSize="25sp"
            android:singleLine="true"
            android:password="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/register_input_pwd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/register_et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textSize="25sp"
                android:inputType="number"
                android:hint="短信验证码"
                android:background="@drawable/forget_pwd_input_checkcode"/>

            <TextView
                android:id="@+id/register_tv_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/register_code"
                android:text="获取短信验证码"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_img_cb"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:src="@mipmap/register_check_button_default"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="阅读并同意《"/>

            <TextView
                android:id="@+id/register_tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册协议"
                android:textColor="#5c5cff"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="》"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/register_bt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注    册"
            android:textSize="25sp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@drawable/login_button"/>


    </LinearLayout>



</LinearLayout>