<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="135dp"
        android:src="@mipmap/course_default_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汽车自动变速器构造与维修"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/adapter_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="王老师"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/click_count"/>

            <TextView
                android:id="@+id/adapter_home_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="1949"
                android:textColor="@color/color_666666"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="14sp"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/res_total"/>

            <TextView
                android:id="@+id/adapter_home_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="62"
                android:textColor="@color/color_666666"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>